<Window x:Class="PRN212_Group4.UpdateProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN212_Group4"
        mc:Ignorable="d"
        Title="Update Product" Height="600" Width="500" Background="#FF99CC" FontFamily="Arial" FontSize="14" Loaded="Window_Loaded">
    <Grid Margin="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Label Content="Update Product Information" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" Background="#FFCCE5D3"/>
                
                <Label Content="Type:" HorizontalAlignment="Left" Margin="0,10,0,0"/>
                <TextBox x:Name="txtType" HorizontalAlignment="Left" Margin="0,5,0,0" VerticalAlignment="Top" Width="400"/>

                <Label Content="Brand:" HorizontalAlignment="Left" Margin="0,15,0,0"/>
                <TextBox x:Name="txtBrand" HorizontalAlignment="Left" Margin="0,5,0,0" VerticalAlignment="Top" Width="400"/>
                
                <Label Content="Model:" HorizontalAlignment="Left" Margin="0,15,0,0"/>
                <TextBox x:Name="txtModel" HorizontalAlignment="Left" Margin="0,5,0,0" VerticalAlignment="Top" Width="400"/>
                
                <Label Content="Title:" HorizontalAlignment="Left" Margin="0,15,0,0"/>
                <TextBox x:Name="txtTitle" HorizontalAlignment="Left" Margin="0,5,0,0" VerticalAlignment="Top" Width="400"/>
                
                <Label Content="Description:" HorizontalAlignment="Left" Margin="0,15,0,0"/>
                <TextBox x:Name="txtDescription" HorizontalAlignment="Left" Margin="0,5,0,0" VerticalAlignment="Top" Width="400" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>
                
                <Label Content="Price:" HorizontalAlignment="Left" Margin="0,15,0,0"/>
                <TextBox x:Name="txtPrice" HorizontalAlignment="Left" Margin="0,5,0,0" VerticalAlignment="Top" Width="400"/>
                
                <Label Content="Color:" HorizontalAlignment="Left" Margin="0,15,0,0"/>
                <TextBox x:Name="txtColor" HorizontalAlignment="Left" Margin="0,5,0,0" VerticalAlignment="Top" Width="400"/>
                
                <Label Content="Dimension:" HorizontalAlignment="Left" Margin="0,15,0,0"/>
                <TextBox x:Name="txtDimension" HorizontalAlignment="Left" Margin="0,5,0,0" VerticalAlignment="Top" Width="400"/>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                    <Button Content="Save" Margin="0,0,20,0" Width="100" Height="35" Click="Save_Click"/>
                    <Button Content="Cancel" Width="100" Height="35" Click="Cancel_Click"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
