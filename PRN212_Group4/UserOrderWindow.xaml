<Window x:Class="PRN212_Group4.UserOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN212_Group4"
        mc:Ignorable="d"
        Title="UserOrderWindow" Height="450" Width="800" Background="#FF99CC" FontFamily="Arial" FontSize="14" >
    <Grid>
        <DataGrid x:Name="dgUserOrders" Margin="28,31,33,123" AutoGenerateColumns="False" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Product Title" Binding="{Binding ProductTitle}" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="Brand" Binding="{Binding ProductBrand}" Width="90"/>
                <DataGridTextColumn Header="Color" Binding="{Binding ProductColor}" Width="*"/>
                <DataGridTextColumn Header="Dimension" Binding="{Binding ProductDemesion}" Width="*"/>
                <DataGridTextColumn Header="Price" Binding="{Binding OrderPrice}" Width="*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding OrderStatus}" Width="*"/>
                <DataGridTemplateColumn Header="Action" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                
                                <Button Content="FeedBack" Margin="5,0" Click="FeedBackButton_Click" />
                            </StackPanel>
                           
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btntransactiondetail" Content="Transaction Detail" HorizontalAlignment="Left" Height="43" Margin="28,342,0,0" VerticalAlignment="Top" Width="338" Click="btntransactiondetail_Click"/>
        <Button x:Name="btnBacktohomepage" Content="Return to HomePage" HorizontalAlignment="Left" Height="43" Margin="398,342,0,0" VerticalAlignment="Top" Width="369" Click="btnBacktohomepage_Click"/>

    </Grid>
</Window>
