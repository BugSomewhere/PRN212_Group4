<Window x:Class="PRN212_Group4.UpdateUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN212_Group4"
        mc:Ignorable="d"
        Title="Update User" Height="400" Width="400" Background="#FF99CC" FontFamily="Arial" FontSize="14" Loaded="Window_Loaded">
    <Grid Margin="20">
        <Label Content="Full Name:" HorizontalAlignment="Left" Margin="0,20,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtFullName" HorizontalAlignment="Left" Margin="120,20,0,0" VerticalAlignment="Top" Width="200"/>

        <Label Content="Email:" HorizontalAlignment="Left" Margin="0,60,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Margin="120,60,0,0" VerticalAlignment="Top" Width="200"/>

        <Label Content="Role Id:" HorizontalAlignment="Left" Margin="0,100,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtRoleId" HorizontalAlignment="Left" Margin="120,100,0,0" VerticalAlignment="Top" Width="200"/>

        <Label Content="Password:" HorizontalAlignment="Left" Margin="0,140,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="120,140,0,0" VerticalAlignment="Top" Width="200"/>

        <Label Content="Total Credit:" HorizontalAlignment="Left" Margin="0,180,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtTotalCredit" HorizontalAlignment="Left" Margin="120,180,0,0" VerticalAlignment="Top" Width="200" IsReadOnly="True"/>

        <Button Content="Save" HorizontalAlignment="Left" Margin="120,240,0,0" VerticalAlignment="Top" Width="100" Click="Save_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="240,240,0,0" VerticalAlignment="Top" Width="100" Click="Cancel_Click"/>
    </Grid>
</Window>