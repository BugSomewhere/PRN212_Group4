<Window x:Class="PRN212_Group4.HomePageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN212_Group4"
        mc:Ignorable="d"
        Title="HomePageWindow" Height="650" Width="900" Background="#FF99CC" FontFamily="Arial" FontSize="14" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="29*"/>
            <ColumnDefinition Width="71*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="ProductList" Grid.ColumnSpan="2" Margin="10,121,167,21" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="80"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80"/>
                <DataGridTextColumn Header="Brand" Binding="{Binding Brand}" Width="100"/>
                <DataGridTextColumn Header="Model" Binding="{Binding Model}" Width="100"/>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="150"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="100"/>
                <DataGridTextColumn Header="Color" Binding="{Binding Color}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <Label Content="Home" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="32" Background="Transparent"/>
        <Label Content="Title:" HorizontalAlignment="Left" Margin="6,63,0,0" VerticalAlignment="Top" FontSize="22"/>
        <TextBox x:Name="Title" HorizontalAlignment="Left" Margin="63,68,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="215" Grid.ColumnSpan="2" Height="26" FontSize="22"/>
        <Button Grid.Column="1" Content="Logout" HorizontalAlignment="Left" Margin="521,389,0,0" VerticalAlignment="Top" Height="30" Width="96" FontSize="20" Click="Logout_Click"/>
        <Button Grid.Column="1" Content="Search" HorizontalAlignment="Left" Margin="29,66,0,0" VerticalAlignment="Top" Height="30" Width="76" FontSize="20" Click="Search_Click"/>
        <Button Grid.Column="1" Content="Payment" HorizontalAlignment="Left" Margin="521,121,0,0" VerticalAlignment="Top" Height="30" Width="96" FontSize="20" Click="Payment_Click"/>
        <Button Grid.Column="1" Content="Order" HorizontalAlignment="Left" Margin="521,245,0,0" VerticalAlignment="Top" Height="30" Width="96" FontSize="20" Click="Order_Click"/>
        <Button Grid.Column="1" Content="Update Account" HorizontalAlignment="Left" Margin="472,18,0,0" VerticalAlignment="Top" Height="30" Width="157" FontSize="20" Click="Update_Account_Click"/>
        <Button Grid.Column="1" Content="Create" HorizontalAlignment="Left" Margin="521,183,0,0" VerticalAlignment="Top" Height="30" Width="96" FontSize="20" Click="Create_Order_Click"/>
        <Button Grid.Column="1" Content="Post" HorizontalAlignment="Left" Margin="521,317,0,0" VerticalAlignment="Top" Height="30" Width="96" FontSize="20" Click="Post_Click"/>

    </Grid>
</Window>
