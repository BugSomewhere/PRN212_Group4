<Window x:Class="PRN212_Group4.HomePageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN212_Group4"
        mc:Ignorable="d"
        Title="Homepage - Product Marketplace" Height="800" Width="1200"
        Background="#FF99CC" FontFamily="Arial" FontSize="14">

    <Grid>
        <!-- Header -->
        <Border Background="#FF9900" Height="80" VerticalAlignment="Top">
            <Grid>
                <TextBlock Text="Product Marketplace" FontSize="24" FontWeight="Bold" 
                          Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Button Name="btnLogout" Content="Logout" Background="#FF4444" 
                       Foreground="White" Padding="10,5" Margin="5" Click="btnLogout_Click"
                       HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Filter Section -->
        <Border Background="White" Height="60" Margin="10,90,10,0" CornerRadius="5">
            <Grid Margin="20,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ComboBox Name="cmbTypeFilter" Grid.Column="0" Margin="5" 
                         ItemsSource="{Binding TypeOptions}" DisplayMemberPath="Value" 
                         SelectedValuePath="Key" SelectionChanged="FilterChanged">
                    <ComboBoxItem Content="All Types" Tag=""/>
                </ComboBox>

                <ComboBox Name="cmbBrandFilter" Grid.Column="1" Margin="5" 
                         ItemsSource="{Binding BrandOptions}" DisplayMemberPath="Value" 
                         SelectedValuePath="Key" SelectionChanged="FilterChanged">
                    <ComboBoxItem Content="All Brands" Tag=""/>
                </ComboBox>

                <TextBox Name="txtSearch" Grid.Column="2" Margin="5" 
                        Text="Search products..." Foreground="Gray" 
                        GotFocus="txtSearch_GotFocus" LostFocus="txtSearch_LostFocus" 
                        TextChanged="txtSearch_TextChanged"/>

                <Button Name="btnRefresh" Grid.Column="3" Content="Refresh" 
                       Background="#FF9900" Foreground="White" Padding="10,5" Margin="5" 
                       Click="btnRefresh_Click"/>
            </Grid>
        </Border>

        <!-- Products List -->
        <Border Background="White" Margin="10,160,10,10" CornerRadius="5">
            <Grid>
                <ListView Name="lvProducts" Margin="10" 
                         ItemsSource="{Binding Products}" 
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#F8F9FA" Margin="5" Padding="15" CornerRadius="8" 
                                   BorderBrush="#E9ECEF" BorderThickness="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="150"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Product Image Placeholder -->
                                    <Border Grid.Column="0" Background="#E9ECEF" Height="150" 
                                           CornerRadius="5" Margin="0,0,15,0">
                                        <TextBlock Text="Product Image" HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center" Foreground="Gray"/>
                                    </Border>

                                    <!-- Product Details -->
                                    <StackPanel Grid.Column="1" Margin="0,0,15,0">
                                        <TextBlock Text="{Binding Title}" FontSize="18" FontWeight="Bold" 
                                                  Foreground="#FF9900" Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding Description}" FontSize="12" 
                                                  TextWrapping="Wrap" Margin="0,0,0,10"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Brand}" FontWeight="Bold" FontSize="12"/>
                                                <TextBlock Text="{Binding Model}" FontSize="12"/>
                                                <TextBlock Text="{Binding Type}" FontSize="12"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Color}" FontSize="12"/>
                                                <TextBlock Text="{Binding Dimension}" FontSize="12"/>
                                            </StackPanel>
                                        </Grid>
                                        <!-- Created By User Info -->
                                        <TextBlock Name="txtCreatedByUser" FontSize="10" Foreground="Gray" 
                                                  Margin="0,10,0,0" Text="Posted by: User"/>
                                    </StackPanel>

                                    <!-- Price and Actions -->
                                    <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                        <TextBlock Text="{Binding Price, StringFormat='${0:F2}'}" 
                                                  FontSize="20" FontWeight="Bold" 
                                                  Foreground="#28A745" HorizontalAlignment="Center" 
                                                  Margin="0,0,0,10"/>

                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="👍 Like" Background="#FF6B6B" Foreground="White" 
                                                   Padding="8,4" Margin="2" Click="btnLike_Click" 
                                                   Tag="{Binding Id}"/>
                                            <Button Content="💬 Comment" Background="#4ECDC4" Foreground="White" 
                                                   Padding="8,4" Margin="2" Click="btnComment_Click" 
                                                   Tag="{Binding Id}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>
    </Grid>
</Window>
