<Window x:Class="Login_Register.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login_Register"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Email:" HorizontalAlignment="Left" Margin="85,142,0,0" VerticalAlignment="Top" Height="43" Width="110" FontSize="22"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="85,217,0,0" VerticalAlignment="Top" Height="43" Width="110" FontSize="22"/>
        <Label Content="Login" HorizontalAlignment="Center" Margin="0,26,0,0" VerticalAlignment="Top" Height="71" Width="110" FontSize="40"/>
        <TextBox x:Name="Email" HorizontalAlignment="Left" Margin="244,148,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="436" Height="30" FontSize="22"/>
        <TextBox x:Name="Password" HorizontalAlignment="Left" Margin="244,224,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="436" Height="30" FontSize="22"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="525,320,0,0" VerticalAlignment="Top" Height="37" Width="76" FontSize="22" Click="Button_Click"/>
        <Button Content="Register" HorizontalAlignment="Left" Margin="228,320,0,0" VerticalAlignment="Top" Height="37" Width="100" FontSize="22" Click="Button_Click_1"/>

    </Grid>
</Window>