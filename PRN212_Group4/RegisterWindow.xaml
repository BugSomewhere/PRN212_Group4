<Window x:Class="Login_Register.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login_Register"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Register" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="30"/>
        <Label Content="FullName:" HorizontalAlignment="Left" Margin="57,83,0,0" VerticalAlignment="Top" Height="39" Width="110" FontSize="22"/>
        <Label Content="Email:" HorizontalAlignment="Left" Margin="57,152,0,0" VerticalAlignment="Top" Height="39" Width="110" FontSize="22"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="57,217,0,0" VerticalAlignment="Top" Height="39" Width="110" FontSize="22"/>
        <TextBox x:Name="FullName" HorizontalAlignment="Left" Margin="233,88,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="468" Height="28" FontSize="22"/>
        <TextBox x:Name="Email" HorizontalAlignment="Left" Margin="233,158,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="468" Height="28" FontSize="22"/>
        <TextBox x:Name="Password" HorizontalAlignment="Left" Margin="233,222,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="468" Height="28" FontSize="22"/>
        <Button Content="Register" HorizontalAlignment="Left" Margin="516,315,0,0" VerticalAlignment="Top" FontSize="22" Click="Button_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="256,315,0,0" VerticalAlignment="Top" FontSize="22" Click="Button_Click_1"/>

    </Grid>
</Window>
