<Window x:Class="PRN212_Group4.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN212_Group4"
        mc:Ignorable="d"
        Title="DashboardWindow" Height="450" Width="800" Loaded="Window_Loaded" Background="#FF99CC" FontFamily="Arial" FontSize="14">
    <Grid>
        <DataGrid x:Name="listUser"  Margin="30,81,152,39" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Role" Binding="{Binding RoleId}"/>
                <DataGridTextColumn Header="FullName" Binding="{Binding FullName}"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}"/>
                <DataGridTextColumn Header="TotalCredit" Binding="{Binding TotalCredit}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="ProductList" HorizontalAlignment="Left" Margin="674,81,0,0" VerticalAlignment="Top" Height="45" Width="91" Click="Button_Click"/>

    </Grid>
</Window>
