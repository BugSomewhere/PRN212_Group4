<Window x:Class="PRN212_Group4.FeedbackManagment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN212_Group4"
        mc:Ignorable="d"
        Title="FeedbackManagment" Height="450" Width="800" Background="#FF99CC" FontFamily="Arial" FontSize="14">
    <Grid>
        <Label Content="Feedback" HorizontalAlignment="Left" Margin="242,10,0,0" VerticalAlignment="Top" Width="287" Height="32" HorizontalContentAlignment="Center" FontWeight="Bold" FontSize="18"/>
        <Label x:Name="lbProductid_read" Content="Product Id:" HorizontalAlignment="Left" Height="36" Margin="10,60,0,0" VerticalAlignment="Top" Width="78" FontWeight="Bold"/>
        <Label x:Name="lbproductid" Content="" HorizontalAlignment="Left" Height="36" Margin="93,60,0,0" VerticalAlignment="Top" Width="93"/>
        <Label x:Name="lbfeedback_read" Content="Feedback:" HorizontalAlignment="Left" Height="40" Margin="10,101,0,0" VerticalAlignment="Top" Width="78" FontWeight="Bold"/>
        <TextBox x:Name="txtfeedback" HorizontalAlignment="Left" Height="217" Margin="10,131,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240"/>


        <DataGrid x:Name="dgUserOrders" Margin="268,101,10,23" AutoGenerateColumns="False" SelectionChanged="dgUserOrders_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="User Name" Binding="{Binding UserName}" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="Comment" Binding="{Binding Comment}" Width="*"/>
                
            </DataGrid.Columns>
        </DataGrid>
        <Label x:Name="lbProductTitle" Content="" HorizontalAlignment="Left" Height="49" Margin="388,47,0,0" VerticalAlignment="Top" Width="334" HorizontalContentAlignment="Center"/>
        <Button x:Name="btnfeedback" Content="FeedBack" HorizontalAlignment="Left" Height="39" Margin="15,372,0,0" VerticalAlignment="Top" Width="115" Click="btnfeedback_Click"/>
        <Button x:Name="btnBacktohomepage" Content="HomePage" HorizontalAlignment="Left" Height="39" Margin="140,372,0,0" VerticalAlignment="Top" Width="110" Click="btnBacktohomepage_Click"/>
    </Grid>
</Window>
