<Window x:Class="PRN212_Group4.UserManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN212_Group4"
        mc:Ignorable="d"
        Title="User Management" Height="450" Width="800" Background="#FF99CC" FontFamily="Arial" FontSize="14" Loaded="Window_Loaded">
    <Grid>
        <DataGrid x:Name="dgUsers" Margin="30,81,152,100" AutoGenerateColumns="False" SelectionChanged="dgUsers_SelectionChanged" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="150"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                <DataGridTextColumn Header="Role Id" Binding="{Binding RoleId}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Delete Selected User" HorizontalAlignment="Left" Margin="30,350,0,0" VerticalAlignment="Top" Height="45" Width="150" Click="Delete_Click" IsEnabled="False" x:Name="btnDelete"/>
        <Button Content="Update Selected User" HorizontalAlignment="Left" Margin="200,350,0,0" VerticalAlignment="Top" Height="45" Width="150" Click="Update_Click" IsEnabled="False" x:Name="btnUpdate"/>
        <Button Content="Back to Dashboard" HorizontalAlignment="Right" Margin="0,350,30,0" VerticalAlignment="Top" Height="45" Width="150" Click="Back_Click"/>
    </Grid>
</Window>