<Window x:Class="PRN212_Group4.CreateProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Product" Height="600" Width="450" Background="#FF99CC" FontFamily="Arial" FontSize="14">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <StackPanel>
                <TextBlock Text="Title:"/>
                <TextBox x:Name="txtTitle" Margin="0,5,0,10"/>

                <TextBlock Text="Type:"/>
                <TextBox x:Name="txtType" Margin="0,5,0,10"/>

                <TextBlock Text="Brand:"/>
                <TextBox x:Name="txtBrand" Margin="0,5,0,10"/>

                <TextBlock Text="Model:"/>
                <TextBox x:Name="txtModel" Margin="0,5,0,10"/>

                <TextBlock Text="Price:"/>
                <TextBox x:Name="txtPrice" Margin="0,5,0,10"/>

                <TextBlock Text="Color:"/>
                <TextBox x:Name="txtColor" Margin="0,5,0,10"/>

                <TextBlock Text="Dimension:"/>
                <TextBox x:Name="txtDimension" Margin="0,5,0,10"/>

                <TextBlock Text="Description:"/>
                <TextBox x:Name="txtDescription" Margin="0,5,0,10" Height="60" TextWrapping="Wrap"/>
                <Button Content="Save" Width="90" Height="32"
                        Click="Save_Click" Background="#2196F3" Foreground="White"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
