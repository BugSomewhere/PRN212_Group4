<Window x:Class="PRN212_Group4.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thanh toán"
        Height="400" Width="400"
        WindowStartupLocation="CenterOwner"
        Background="#FFF8F8F8">

    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="txtProductTitle"
                       Text="Sản phẩm"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,0,0,10"
                       TextAlignment="Center"/>

            <TextBlock x:Name="txtPrice"
                       Text="Giá"
                       FontSize="16"
                       Foreground="DarkSlateGray"
                       Margin="0,0,0,20"
                       TextAlignment="Center"/>

            <Image x:Name="imgQr"
                   Width="200"
                   Height="200"
                   Stretch="Uniform"
                   Margin="0,0,0,20"/>

            <Button Content="Xác nhận thanh toán"
                    Width="200"
                    Height="40"
                    Click="ConfirmPayment_Click"/>
        </StackPanel>
    </Grid>
</Window>
