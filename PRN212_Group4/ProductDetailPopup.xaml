<Window x:Class="PRN212_Group4.ProductDetailPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chi tiết sản phẩm" 
        Height="350" Width="250"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock x:Name="txtTitle" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" />
            <TextBlock x:Name="txtPrice" FontSize="14" Margin="0,0,0,10" TextWrapping="Wrap" TextTrimming="CharacterEllipsis"/>
            <TextBlock x:Name="txtDescription" Margin="0,0,0,20" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" />

            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <TextBlock Text="Số lượng:" VerticalAlignment="Center"/>
                <TextBox x:Name="txtQuantity" Width="60" Margin="10,0,0,0" Text="1"/>
            </StackPanel>

            <Button Content="Thêm vào giỏ hàng"
                    Height="35"
                    Click="AddToCart_Click"/>
        </StackPanel>
    </Grid>
</Window>
